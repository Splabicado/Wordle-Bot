package wordleBot;
import java.io.*;
import java.util.*;

public class ListOperators 
{
	// removes any entries without chr
	public ArrayList<String> has(ArrayList<String> list, char chr)
	{
		ArrayList<String> result = new ArrayList<String>();
	    for (int i = 0; i<list.size(); i++)
	    {
	    	String word = list.get(i);
	    	if (word.indexOf(chr)!=-1)
	    	{
	    		result.add(word);
	    	}
	    }
	    return result;
	}
	
	public ArrayList<String> doesntHave(ArrayList<String> list, char chr)
	{
		ArrayList<String> result = new ArrayList<String>();
	    for (int i = 0; i<list.size(); i++)
	    {
	    	String word = list.get(i);
	    	if (word.indexOf(chr)==-1)
	    	{
	    		result.add(word);
	    	}
	    }
	    return result;
	}
	
	public ArrayList<String> letterAtIs(ArrayList<String> list, int index, char chr)
	{
		ArrayList<String> result = new ArrayList<String>();
	    for (int i = 0; i<list.size(); i++)
	    {
	    	String word = list.get(i);
	    	if (word.charAt(index)==chr)
	    	{
	    		result.add(word);
	    	}
	    }
	    return result;
	}
	
	public ArrayList<String> letterAtIsNot(ArrayList<String> list, int index, char chr)
	{
		ArrayList<String> result = new ArrayList<String>();
	    for (int i = 0; i<list.size(); i++)
	    {
	    	String word = list.get(i);
	    	if (word.charAt(index)!=chr)
	    	{
	    		result.add(word);
	    	}
	    }
	    return result;
	}
	
	public ArrayList<String> makeList(String str)
	{
		ArrayList<String> result = new ArrayList<String>();
		for (int i = 0; i<str.length()-6; i+=6)
		{
			result.add(str.substring(i,i+6));
		}
		return result;
	}
	
}
